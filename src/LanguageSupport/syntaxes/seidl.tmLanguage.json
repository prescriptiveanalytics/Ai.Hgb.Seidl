{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Seidl",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#types"},
		{ "include": "#reservedvalues" },
		{ "include": "#strings"	},
		{ "include": "#comment" },
		{ "include": "#graphoperator" },
		{ "include": "#pubsuboperator" },
		{ "include": "#reqresoperator" },
		{ "include": "#pubsubquerybeginoperator"},
		{ "include": "#pubsubqueryendoperator" },
		{ "include": "#reqresquerybeginoperator" },
		{ "include": "#reqresqueryendoperator" }

	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.seidl",
				"match": "\\b(typedef|label|import|include|property|topic|input|output|aux|req|res|pub|sub|request|response|publish|subscribe|client|server|as|imitate|imitates|for|with|name|tag|image|in|to|command)\\b"
			}]
		},
		"types": {
			"patterns": [{
				"name": "entity.name.type",
				"match": "\\b(string|int|float|bool|struct|message|edgetype|edge|nodetype|node|surrogate|package|optimizer|var)\\b"
			}]
		},
		"reservedvalues": {
			"patterns": [{
				"name": "markup.italic",
				"match": "\\b(null|true|false|latest|queue)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.seidl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.seidl",
					"match": "\\\\."
				}
			]
		},
		"comment": {
			"patterns": [{
				"name": "comment.line.seidl",
				"match": "#.*$\n?"
			}]
		},
		"pubsuboperator": {
			"patterns": [{
				"name": "markup.bold",
				"match": "-->"				
			}]
		},
		"reqresoperator": {
			"patterns": [{
				"name": "markup.bold",
				"match": "==>"				
			}]
		},
		"pubsubquerybeginoperator": {
			"patterns": [{
				"name": "markup.bold",
				"match": "-:"				
			}]
		},
		"pubsubqueryendoperator": {
			"patterns": [{
				"name": "markup.bold",
				"match": "->"				
			}]
		},
		"reqresquerybeginoperator": {
			"patterns": [{
				"name": "markup.bold",
				"match": "=:"				
			}]
		},
		"reqresqueryendoperator": {
			"patterns": [{
				"name": "markup.bold",
				"match": "=>"				
			}]
		}
	},
	"scopeName": "source.seidl"
}