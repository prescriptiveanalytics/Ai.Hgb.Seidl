{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Sidl",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#types"},
		{ "include": "#reservedvalues" },
		{ "include": "#strings"	},
		{ "include": "#comment" },
		{ "include": "#graphoperator" },
		{ "include": "#reqresoperator" }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.sidl",
				"match": "\\b(typedef|import|include|property|topic|input|output|aux|req|res|pub|sub|request|response|publish|subscribe|client|server|as|imitate|imitates|for|with|latest)\\b"
			}]
		},
		"types": {
			"patterns": [{
				"name": "entity.name.type",
				"match": "\\b(string|int|float|bool|struct|message|edgetype|edge|nodetype|node|surrogate)\\b"
			}]
		},
		"reservedvalues": {
			"patterns": [{
				"name": "keyword.control.sidl",
				"match": "\\b(null|true|false)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.sidl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.sidl",
					"match": "\\\\."
				}
			]
		},
		"comment": {
			"patterns": [{
				"name": "comment.line.sidl",
				"match": "#.*$\n?"
			}]
		},
		"pubsuboperator": {
			"patterns": [{
				"name": "keyword.operator.sidl",
				"match": "-->"				
			}]
		},
		"reqresoperator": {
			"patterns": [{
				"name": "keyword.operator.sidl",
				"match": "==>"				
			}]
		},
		"pubsubquerybeginoperator": {
			"patterns": [{
				"name": "keyword.operator.sidl",
				"match": "-["				
			}]
		},
		"pubsubqueryendoperator": {
			"patterns": [{
				"name": "keyword.operator.sidl",
				"match": "]->"				
			}]
		},
		"reqresquerybeginoperator": {
			"patterns": [{
				"name": "keyword.operator.sidl",
				"match": "=["				
			}]
		},
		"reqresqueryendoperator": {
			"patterns": [{
				"name": "keyword.operator.sidl",
				"match": "]=>"				
			}]
		}
	},
	"scopeName": "source.sidl"
}