{
	"name": "lsp-sample",
	"description": "A language server example",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "SPA",
	"categories": ["Programming Languages"],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:sidl"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"sidlLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"sidlLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [{
			  "id": "sidl",        
			  "aliases": ["Sidl", "sidl", "Seidl", "seidl"],
			  "extensions": [".3l",".sid",".sidl",".seidl"],
			  "configuration": "./language-configuration.json" 
		}],
		"grammars": [{
			"language": "sidl",
			"scopeName": "source.sidl",
			"path": "./syntaxes/sidl.tmLanguage.json"
		}],
		"commands": [
			{
			  "command": "sidl.visualization.graph.start",
			  "title": "Graph",
			  "category": "Sidl Visualizations"
			},
			{
				"command": "sidl.visualization.datamonitor.start",
				"title": "Data Monitor",
				"category": "Sidl Visualizations"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"mocha": "^9.2.1",
		"typescript": "^4.8.4"
	}
}
